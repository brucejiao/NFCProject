<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ddd"
    android:orientation="vertical">


    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_solid"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#999"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="值仓仓库"/>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical">
                    <TextView
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_toLeftOf="@+id/modify_btn"
                        android:id="@+id/store_house"
                        android:layout_centerVertical="true"
                        android:textColor="#444"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""/>
                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/modify_btn">
                    <TextView
                        android:textSize="16dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_solid2"
                        android:textColor="#fff"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:text="修改"/>
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/my_collectionstore"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#999"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粮食品种"/>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical">
                    <TextView
                        android:id="@+id/varicty"
                        android:textSize="18dp"
                        android:textColor="#444"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_fabulous_coupon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#999"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价        格"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical">
                    <TextView
                        android:id="@+id/price"
                        android:textSize="18dp"
                        android:textColor="#444"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""/>
                    <TextView
                        android:layout_marginRight="10dp"
                        android:textSize="18dp"
                        android:textColor="#444"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="元/千克"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#999"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车  船  号"/>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical">
                    <TextView
                        android:id="@+id/car_num"
                        android:textSize="18dp"
                        android:textColor="#444"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#999"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户名称"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical">
                    <TextView
                        android:id="@+id/cus_name"
                        android:textSize="18dp"
                        android:textColor="#444"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#999"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作业类型"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical">
                    <TextView
                        android:id="@+id/work_type"
                        android:textSize="18dp"
                        android:textColor="#444"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#999"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="环        节"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical">
                    <TextView
                        android:id="@+id/link"
                        android:textSize="18dp"
                        android:textColor="#444"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#999"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="毛        重"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical">
                    <TextView
                        android:id="@+id/grossweight"
                        android:textSize="18dp"
                        android:textColor="#444"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""/>
                    <TextView
                        android:layout_marginRight="10dp"
                        android:textSize="18dp"
                        android:textColor="#444"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="千克"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/bg_solid"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="#999"
                        android:textSize="18dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="仓        库"/>

                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical">
                        <TextView
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:id="@+id/store_house2"
                            android:layout_centerVertical="true"
                            android:textColor="#444"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text=""/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <RadioGroup
                        android:id="@+id/storehouse_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/normal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:text="正常值仓"/>
                        <RadioButton
                            android:id="@+id/abnormal"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:text="未卸完，需换仓"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="#444"
                        android:textSize="18dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="仓库加扣"/>

                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical">

                        <RelativeLayout
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/bg_solid3"
                            android:layout_toLeftOf="@+id/input"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/type" >
                            <TextView
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textSize="16dp"
                                android:textColor="#444"
                                android:id="@+id/type_value"/>
                            <ImageView
                                android:layout_marginRight="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="15dp"
                                android:layout_height="7dp"
                                android:src="@mipmap/down"/>
                        </RelativeLayout>
                        <EditText
                            android:maxLength="8"
                            android:inputType="number"
                            android:layout_alignParentRight="true"
                            android:id="@+id/input"
                            android:layout_width="120dp"
                            android:textSize="18dp"
                            android:layout_height="match_parent"
                            android:digits="1234567890."
                            android:hint="请输入值"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
       </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#666"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom">
        <TextView
            android:background="#6792D7"
            android:id="@+id/finish"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="#fff"
            android:text="值仓"/>
        <TextView
            android:background="#6792D7"
            android:id="@+id/again"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="重新化验"/>

    </LinearLayout>
    <TextView
        android:gravity="center"
        android:textSize="28dp"
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/info"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bottom"
        android:visibility="invisible"
        android:layout_toEndOf="@+id/bottom" />

    <ImageView
        android:id="@+id/img_nfc"
        android:layout_width="450dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:background="@mipmap/nfc"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6792D7"
        app:theme="@style/toolbar_Theme"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tip"
        android:layout_toEndOf="@+id/tip">
       <TextView
           android:id="@+id/title"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="@string/app_name"/>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>