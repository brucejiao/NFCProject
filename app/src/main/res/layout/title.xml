<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  	android:id="@+id/title_preview"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/title_bg"
	android:orientation="vertical"
	>
		
	<ImageView 
		android:id="@+id/title_left_image"
    	android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
		android:layout_alignParentLeft="true"
		android:background="@drawable/title_menu_btn"
		android:scaleType="center"
		/>
		
		
	
	 
     <ImageView 
		android:id="@+id/title_right_image"
    	android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="14dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:background="@drawable/title_dev_list_btn"
		android:scaleType="center"
		android:visibility="invisible"
		/>

        
     <TextView android:id="@+id/title_center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_toLeftOf="@id/title_right_image"
        android:layout_toRightOf="@id/title_left_image"
        android:textSize="15dip"
        android:ellipsize="end"
	    android:singleLine="true"
	    android:textStyle="bold"
        android:textColor="#000"
        />
</RelativeLayout>
