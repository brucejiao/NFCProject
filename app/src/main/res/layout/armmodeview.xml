<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffffff" >

    <Button
        android:id="@+id/bt_intelbrass_arm_mode_get"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cb_intelbrass_arm_mode_state"
        android:text="@string/get_config" />

    <TextView
        android:id="@+id/tv_intelbrass_arm_mode_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cb_intelbrass_arm_mode_state"
        android:layout_alignBottom="@+id/cb_intelbrass_arm_mode_state"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="@string/intelbrass_arm_mode_Mode" />

    <CheckBox
        android:id="@+id/cb_intelbrass_arm_mode_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="90dp" />

</RelativeLayout>
